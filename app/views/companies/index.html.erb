<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <header class="header">
      <div>Companies</div>
    </header>
    <section class="whole">
      <article class="main">
        <table class="table table-striped container-fluid">
          <thead>
            <tr class="table-primary">
              <th style="width: 25%">Company</th>
              <th style="width: 25%"><%= link_to 'Add a New Company', new_company_path %></th>
              <th style="width: 40%"></th>
              <th style="width: 5%"></th>
              <th style="width: 5%"></th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each_with_index do |company, index| %>
            <tr>
              <td style="width: 25%"><%= link_to "#{company.name}", company_path(company) %></td>
              <td style="width: 25%"></td>
              <td style="width: 40%"><%= link_to "#{company.jobs.length} Jobs", company_jobs_path(company) %></td>
              <td style="width: 5%"><%= link_to "Edit", edit_company_path(company) %></td>
              <td style="width: 5%" align='center'><%= link_to "Delete", company_path(company), method: "delete", data: {confirm: "Really want to delete this category?"} %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </article>
    </section>
  </body>
</html>
